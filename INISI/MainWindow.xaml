<Window x:Class="INISI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INISI"
        mc:Ignorable="d"
        Title="通用INI一键修改器 v0.0.0_0001" Height="380" Width="525" ResizeMode="NoResize">
    <Grid>
        <Canvas Margin="0,0,10,0">
            <ComboBox x:Name="cb_game" SelectionChanged="cb_game_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Top" Width="130" Canvas.Left="10" Canvas.Top="10"/>
            <TextBlock x:Name="tb_desc" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="354" FontSize="14" Canvas.Left="145" Canvas.Top="10"/>
            <Button x:Name="btn_import" Content="导入" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Canvas.Left="424" Canvas.Top="322" Click="btn_import_Click"/>
            <TextBox x:Name="tb_tips" IsReadOnly="True" HorizontalAlignment="Left" Height="281" TextWrapping="Wrap" VerticalAlignment="Top" Width="489" Canvas.Left="10" Canvas.Top="36" VerticalScrollBarVisibility="Visible"/>
            <Button x:Name="btn_about" Content="关于" Canvas.Left="10" Canvas.Top="322" Width="75" Click="btn_about_Click"/>

        </Canvas>
    </Grid>
</Window>
